{
    "openapi": "3.0.0",
    "info": {
        "title": "Notification Hub API",
        "description": "API para enviar notificaciones a través de diferentes servicios",
        "version": "1.0"
    },
    "paths": {
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrar un nuevo usuario",
                "description": "Crea un nuevo usuario en el sistema.",
                "operationId": "da8643013c2941f5ed7f8a9c9b4a7f7a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "ale123"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "ale@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully"
                                        },
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Iniciar sesión",
                "description": "Autentica un usuario con username y devuelve el token JWT.",
                "operationId": "535ffeda4b78916efd658b2844ea897a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "ale123"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Inicio de sesión exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas"
                    }
                }
            }
        },
        "/api/auth/profile": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Obtener perfil del usuario autenticado",
                "description": "Devuelve la información del usuario autenticado mediante el token JWT.",
                "operationId": "4faf7a993248470c2e97e7b788e22b6c",
                "responses": {
                    "200": {
                        "description": "Perfil del usuario autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido o expirado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Cerrar sesión",
                "description": "Invalida el token JWT actual.",
                "operationId": "46f8a14c8083abb69eed72768aa08629",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Successfully logged out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido o expirado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refrescar token JWT",
                "description": "Devuelve un nuevo token JWT válido.",
                "operationId": "f3538b6e9c46bcf601a9d194288b03d4",
                "responses": {
                    "200": {
                        "description": "Token refrescado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido o expirado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/messages/send": {
            "post": {
                "tags": [
                    "Messages"
                ],
                "summary": "Envía un mensaje a través de un proveedor (Telegram, Slack, etc.)",
                "operationId": "e5be4bea5955d333172189637ca47fea",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "content",
                                    "targets"
                                ],
                                "properties": {
                                    "content": {
                                        "type": "string"
                                    },
                                    "targets": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "service": {
                                                    "type": "string"
                                                },
                                                "recipient": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "content": "¡Hola desde Notification Hub!",
                                "targets": [
                                    {
                                        "service": "Telegram",
                                        "recipient": "6652156621"
                                    },
                                    {
                                        "service": "Slack",
                                        "recipient": "https://hooks.slack.com/services/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"
                                    },
                                    {
                                        "service": "Discord",
                                        "recipient": "https://discord.com/api/webhooks/1431766030090375198/ixm2sQhbs3VtLpe_cuz4-JmzHLOhY3fBQ_hIs4DPA-xfYO8C6UB24DckNu_NTSQHZVlb"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mensaje enviado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "Message dispatched successfully"
                                        },
                                        "user": {
                                            "type": "string",
                                            "example": "juan"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido o no autenticado"
                    },
                    "400": {
                        "description": "Datos inválidos"
                    },
                    "500": {
                        "description": "Error interno al enviar el mensaje"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/messages": {
            "get": {
                "tags": [
                    "Messages"
                ],
                "summary": "Lista los mensajes enviados por el usuario autenticado o por todos los usuarios si es administrador",
                "operationId": "8752b0e7b0592bf322685191dbbdfbd6",
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filtra los mensajes por estado del envío (por ejemplo: sent, failed, pending)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "sent"
                        }
                    },
                    {
                        "name": "service",
                        "in": "query",
                        "description": "Filtra los mensajes por nombre del servicio (por ejemplo: telegram, slack, discord)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "telegram"
                        }
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "Fecha inicial para filtrar los mensajes (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-10-01"
                        }
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "Fecha final para filtrar los mensajes (YYYY-MM-DD)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-10-26"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado de mensajes obtenidos correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "content": {
                                                "type": "string",
                                                "example": "¡Hola desde Notification Hub!"
                                            },
                                            "user_id": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-10-25T14:30:00Z"
                                            },
                                            "targets": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 12
                                                        },
                                                        "recipient": {
                                                            "type": "string",
                                                            "example": "123456789"
                                                        },
                                                        "status": {
                                                            "type": "string",
                                                            "example": "sent"
                                                        },
                                                        "service": {
                                                            "properties": {
                                                                "id": {
                                                                    "type": "integer",
                                                                    "example": 2
                                                                },
                                                                "name": {
                                                                    "type": "string",
                                                                    "example": "telegram"
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido o no autenticado"
                    },
                    "500": {
                        "description": "Error interno al obtener los mensajes"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/metrics": {
            "get": {
                "tags": [
                    "Metrics"
                ],
                "summary": "Obtiene las métricas diarias de envío de mensajes por usuario",
                "description": "Devuelve la cantidad de mensajes enviados hoy por cada usuario y cuántos puede enviar antes de alcanzar el límite diario (100 mensajes).",
                "operationId": "7ccef6ae9f879cae180ccd8fee1f1245",
                "responses": {
                    "200": {
                        "description": "Listado de métricas diarias por usuario",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "username": {
                                                "type": "string",
                                                "example": "juanperez"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "juan@example.com"
                                            },
                                            "messages_sent_today": {
                                                "type": "integer",
                                                "example": 23
                                            },
                                            "remaining_messages": {
                                                "type": "integer",
                                                "example": 77
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido o no autenticado"
                    },
                    "500": {
                        "description": "Error interno del servidor"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "title": "User",
                "description": "Modelo de usuario del sistema",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "username": {
                        "type": "string",
                        "example": "ale123"
                    },
                    "email": {
                        "type": "string",
                        "example": "ale@example.com"
                    },
                    "role_id": {
                        "type": "integer",
                        "example": 2,
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-25T12:34:56Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-25T12:34:56Z"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Endpoints de autenticación (registro, login, perfil, logout, refresh)"
        },
        {
            "name": "Messages",
            "description": "Endpoints para el envío y gestión de mensajes."
        },
        {
            "name": "Metrics",
            "description": "Metrics"
        }
    ]
}